<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon
  id="plugin.video.bbcalivefeeds"
  name="Big Brother Canada Live Feeds"
  version="1.0.0"
  provider-name="liquid8d">
  <requires>
   <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension
    point="xbmc.python.pluginsource"
    library="default.py">
   <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Big Brother Canada Live Streams</summary>
    <description lang="en">Watch the live feeds for Big Brother Canada!</description>
    <platform>all</platform>
	<email>liquid8d@gmail.com</email>
  </extension>
</addon>

<addon id="repository.liquid8d" name="liquid8d's XBMC Addons" version="1.0.0" provider-name="liquid8d">
	<extension point="xbmc.addon.repository" name="liquid8d's XBMC Addon Repository">
		<info compressed="false">https://raw.github.com/liquid8d/xbmc/master/addons.xml</info>
		<checksum>https://raw.github.com/liquid8d/xbmc/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/liquid8d/xbmc/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install liquid8d's Addons</summary>
		<description>Download and install addons by liquid8d</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
