<addon id="repository.liquid8d" name="liquid8d's XBMC Addons" version="1.0.0" provider-name="liquid8d">
	<extension point="xbmc.addon.repository" name="liquid8d's XBMC Addon Repository">
		<info compressed="false">https://raw.github.com/liquid8d/xbmc/master/addons.xml</info>
		<checksum>https://raw.github.com/liquid8d/xbmc/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/liquid8d/xbmc/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install liquid8d's Addons</summary>
		<description>Download and install addons by liquid8d</description>
		<platform>all</platform>
	</extension>
</addon>

<addon
	id="script.bigbrother"
	version="1.0.1"
	name="Big Brother Live Feeds"
	provider-name="liquid8d">

	<requires>
		<import addon="xbmc.python" version="2.0"/>
	</requires>

	<extension point="xbmc.python.script"
		defaultresolution="720p"
		defaultresolutionwide="720p"
		library="default.py"/>

	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<minversion>35647</minversion>
		<summary lang="en">Watch Big Brother Live Feeds</summary>
		<description lang="en">Watch Big Brother Live Feeds *Requires valid CBS subscription.</description>
	</extension>
</addon>
</addons>
